<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.controllers.PatientManagementPageController"
      prefWidth="700.0" prefHeight="500.0"> <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Manajemen Pasien" />

    <GridPane hgap="10" vgap="10">
        <Label text="Nama Pasien:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" promptText="Masukkan nama pasien" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Usia Pasien:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="ageField" promptText="Masukkan usia pasien" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button onAction="#handleAddPatient" text="Tambah Pasien" />
        <Button onAction="#handleUpdatePatient" text="Perbarui Pasien" />
        <Button onAction="#handleDeletePatient" text="Hapus Pasien" />
        <Button onAction="#handleClearForm" text="Bersihkan Form" />
    </HBox>

    <TableView fx:id="patientTable" prefHeight="300.0" prefWidth="600.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID" />
            <TableColumn fx:id="nameColumn" prefWidth="250.0" text="Nama" />
            <TableColumn fx:id="ageColumn" prefWidth="100.0" text="Usia" />
        </columns>
    </TableView>
</VBox>